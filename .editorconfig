# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true

# 4 space indentation
[*.{js,mjs,jsx,mjsx,json,css,scss}]
indent_style = space
indent_size = 2
tab_width = 2
